{
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "prettier/prettier": [
          "warn",
          {
            "arrowParens": "avoid",
            "semi": true,
            "trailingComma": "none",
            "endOfLine": "auto",
            "tabWidth": 2,
            "useTabs": false,
            "singleQuote": true,
            "printWidth": 120,
            "jsxSingleQuote": false
          }
        ]
      },
      "settings": {
        "import/resolver": {
          "node": {
            "paths": ["client/src"],
            "alias": {
              "apis": "./client/src/apis",
              "components": "./client/src/components",
              "context": "./client/src/context",
              "helpers": "./client/src/helpers",
              "assets": "./client/src/assets",
              "pages": "./client/src/pages",
              "redux": "./client/src/redux"
            }
          }
        }
      }
    }
  ]
}
