{
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "avoid",
        "semi": true,
        "trailingComma": "none",
        "endOfLine": "auto",
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 120,
        "jsxSingleQuote": false
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./client/src"],
        "alias": {
          "apis": "./src/apis",
          "components": "./src/components",
          "context": "./src/context",
          "helpers": "./src/helpers",
          "assets": "./src/assets",
          "pages": "./src/pages",
          "redux": "./src/redux"
        }
      }
    }
  }
}
